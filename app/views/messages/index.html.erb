<p style="color: green"><%= notice %></p>

<h1>
  Messages
  <span id="messages_counter">
    <%= Message.count %>
  </span>
</h1>

<div id="new_message">
  <%= render  partial: "messages/form", locals: {message: Message.new}%>

</div>

<div id="messages">
  <% @messages.each do |message| %>
    <%= render message %>
  <% end %>
</div>


<%= link_to "New message", new_message_path %>
